<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="@Url.Content("~/Content/js/jquery-1.11.3.min.js")"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("WebASP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (WebASP.Models.Common.MaNV != "")
                    {
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Sản Phẩm", "", "SanPhams")</li>
                        <li>@Html.ActionLink("Hình Ảnh", "", "HinhAnhSPs")</li>
                        <li>@Html.ActionLink("Khách Hàng", "", "KhachHangs")</li>
                        <li>@Html.ActionLink("Nhân Viên", "", "NhanViens")</li>
                        <li>@Html.ActionLink("Đơn Hàng", "", "DonHangs")</li>
                        <li>@Html.ActionLink("Chi Tiết Đơn Hàng", "", "ChiTietDonHangs")</li>

                    }

                </ul>

                <ul class="navbar-right nav navbar-nav">
                    @if (WebASP.Models.Common.MaNV != "")
                    {
                        <li>@Html.ActionLink("Đăng xuất", "Login", "Logins")</li>
                    }
                    @if (WebASP.Models.Common.MaNV == "")
                    {
                        <li>@Html.ActionLink("Đăng Nhập", "Login", "Logins")</li>
                    }
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (TempData["AlertMessage"] != null)
        {
            <div id="alertbox" class="alert @TempData["AlertType"] hide">
                @TempData["AlertMessage"]
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/assets/js/alert.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
