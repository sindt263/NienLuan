@model WebASP.Models.KhachHang

@{
    ViewBag.Title = "LoginKH";
    Layout = "~/Areas/Login/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

@Html.Raw(ViewBag.error)
<html>
<b>@WebASP.Models.Common.Alert</b>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <form method="post" asp-action="LoginKH">
        <div class="form-group">
            @Html.LabelFor(model => model.TaiKhoanKH, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaiKhoanKH, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username" } })
                @Html.ValidationMessageFor(model => model.TaiKhoanKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MatKhauKH, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MatKhauKH, new { htmlAttributes = new { @class = "form-control" , @placeholder = "Password" } })
                @Html.ValidationMessageFor(model => model.MatKhauKH, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </form>
}